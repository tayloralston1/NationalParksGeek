@model Survey
@{
    ViewData["Title"] = "Index";
}

<h2>Survey</h2>

<div class="survey">
    <form asp-action="index" asp-controller="survey" method="post">
        <div class="form">
            <label asp-for="ParkCode"></label>
            <select asp-for="ParkCode" asp-items="@ViewBag.ParkCode"></select>
            <span asp-validation-for="ParkCode"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        @*<div class="form-group">
            <label for="focusedInput">Email</label>
            <input class="form-control" id="focusedInput" type="text">
        </div>*@
        <div>
            <label asp-for="State"></label>
            <select asp-for="State" asp-items="Survey.States"></select>
            <span asp-validation-for="State"></span>
        </div>
        <div>
            <label asp-for="ActivityLevel">Activity Level</label>
            <select asp-for="ActivityLevel" asp-items="Survey.Actives"></select>
            <span asp-validation-for="ActivityLevel"></span>
        </div>
        <div>
            <button type="submit" class="btn">Submit Survey</button>
            @*<input type="submit" value="Submit Survey" />*@
        </div>
    </form>
</div>